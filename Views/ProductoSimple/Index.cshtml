@model IEnumerable<BaseConLogin.Models.ProductoSimple>

@{
    ViewData["Title"] = "Productos Simples";
}

<h2>Productos Simples</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    ➕ Nuevo Producto
</a>

<!-- ========================= -->
<!-- FILTROS -->
<!-- ========================= -->

<form method="get" class="mb-3">

    <div class="input-group">

        <!-- Nombre -->
        <input type="text"
               name="nombre"
               value="@ViewBag.FilterNombre"
               class="form-control"
               placeholder="Nombre" />

        <!-- Precio mínimo -->
        <input type="number"
               name="precioMin"
               value="@ViewBag.FilterPrecioMin"
               class="form-control"
               placeholder="Precio min" />

        <!-- Precio máximo -->
        <input type="number"
               name="precioMax"
               value="@ViewBag.FilterPrecioMax"
               class="form-control"
               placeholder="Precio max" />

        <!-- Estado -->
        <select name="activo" class="form-select">
        @foreach (var item in ViewBag.Estados as List<SelectListItem>)
        {
            if (item.Value == (string)ViewBag.EstadoSeleccionado)
            {
                <option value="@item.Value" selected="selected">@item.Text</option>
            }
            else
            {
                <option value="@item.Value">@item.Text</option>
            }
        }
        </select>

        <!-- Botón filtrar -->
        <button type="submit" class="btn btn-primary">
            Filtrar
        </button>

        <!-- Botón limpiar -->
        <a href="@Url.Action("Index", "ProductoSimple")" class="btn btn-secondary">
            Limpiar
        </a>

    </div>

</form>


<!-- ========================= -->
<!-- TABLA DE PRODUCTOS -->
<!-- ========================= -->
<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Producto.ImagenPrincipal"
                         style="width:60px;height:60px;object-fit:cover" />
                </td>
                <td>@item.Producto.Nombre</td>
                <td>@item.Producto.PrecioBase €</td>
                <td>@item.Stock</td>
                <td>@(item.Producto.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProductoBaseId">Ver</a>
                    @if (User.IsInRole("Admin") || (User.IsInRole("AdministradorTienda") &&
                        item.Producto.TiendaId == int.Parse(User.FindFirst("TiendaId")!.Value)))
                    {
                        <text>
                            | <a asp-action="Edit" asp-route-id="@item.ProductoBaseId">Editar</a>
                            | <a asp-action="Delete" asp-route-id="@item.ProductoBaseId">Eliminar</a>
                        </text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
