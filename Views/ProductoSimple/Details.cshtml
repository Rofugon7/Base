@model BaseConLogin.Models.ProductoBase

@{
    ViewData["Title"] = Model.Nombre;
    var imagenes = Model.Imagenes.OrderByDescending(i => i.EsPrincipal).ToList();
    // Si no hay returnUrl, por defecto mandamos al Index o Home
    var urlRegreso = ViewBag.ReturnUrl ?? Url.Action("Index", "Home");

    // Detectamos el origen para el texto de la miga de pan
    string origenTexto = "Inicio";
    string origenUrl = Url.Action("Index", "Home");

    if (!string.IsNullOrEmpty(urlRegreso))
    {
        if (urlRegreso.Contains("ProductoSimple"))
        {
            origenTexto = "Administración de Productos";
            origenUrl = urlRegreso;
        }
        else if (urlRegreso.Contains("Search"))
        {
            origenTexto = "Resultados de Búsqueda";
            origenUrl = urlRegreso;
        }
    }
}

<nav aria-label="breadcrumb">
    <div class="breadcrumb-container">
        <div class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Inicio</a>
        </div>

        @if (origenTexto != "Inicio")
        {
            <div class="breadcrumb-item">
                <a href="@origenUrl">@origenTexto</a>
            </div>
        }

        <div class="breadcrumb-item active">
            @Model.Nombre
        </div>
    </div>
</nav>

<div class="container mt-5">
    <div class="card shadow-lg border-0 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-6 bg-light p-4">
                <div class="main-img-container shadow-sm rounded mb-3 bg-white">
                    <img id="mainImage" src="@Model.ImagenPrincipal" alt="@Model.Nombre" class="img-fluid main-display">
                </div>

                <div class="d-flex gap-2 justify-content-center overflow-auto pb-2">
                    @foreach (var img in imagenes)
                    {
                        <div class="thumb-container @(img.EsPrincipal ? "active" : "")">
                            <img src="/@img.Ruta"
                                 class="img-thumbnail thumb-img"
                                 onclick="changeImage(this.src, this)"
                                 role="button">
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-6 p-5 d-flex flex-column justify-content-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2">
                        <li class="breadcrumb-item text-uppercase small text-muted">Producto Simple</li>
                        <li class="breadcrumb-item active text-uppercase small" aria-current="page">@Model.Nombre</li>
                    </ol>
                </nav>

                <h1 class="display-5 fw-bold mb-3 text-dark">@Model.Nombre</h1>

                <div class="mb-4">
                    <span class="h2 fw-light text-primary">@Model.CalcularPrecioFinal().ToString("C2")</span>
                    <span class="text-muted ms-2 small">IVA incluido</span>
                </div>

                <p class="text-secondary mb-4 lh-lg">
                    @Model.Descripcion
                </p>

                <div class="mb-4">
                    @if (Model.Stock > 0)
                    {
                        <span class="badge bg-success-subtle text-success border border-success px-3 py-2 rounded-pill">
                            <i class="bi bi-check-circle-fill me-1"></i> Stock disponible: @Model.Stock unidades
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger-subtle text-danger border border-danger px-3 py-2 rounded-pill">
                            <i class="bi bi-x-circle-fill me-1"></i> Agotado temporalmente
                        </span>
                    }
                </div>

                <hr class="my-4 text-muted opacity-25">

                <div class="d-grid gap-2 d-md-flex">
                    @if (Model.Stock > 0)
                    {
                        <form id="formAñadirCarrito" method="post" asp-controller="Carrito" asp-action="Añadir">
                            <input type="hidden" name="productoBaseId" value="@Model.Id" />
                            <input type="hidden" name="tiendaId" value="@Model.TiendaId" />

                            <div class="input-group mb-3" style="max-width: 250px;">
                                <input type="number" name="cantidad" value="1" min="1" max="@Model.Stock" class="form-control" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa-solid fa-cart-plus"></i> Añadir
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning d-inline-block">
                            <i class="fa-solid fa-circle-exclamation"></i> <strong>Agotado temporalmente</strong>
                            <br />
                            <button class="btn btn-secondary mt-2" disabled>
                                Sin existencias
                            </button>
                        </div>
                    }
                    <a href="@urlRegreso" class="btn btn-outline-secondary px-4 d-inline-flex align-items-center" style="height: 43px;">
                        <i class="fa-solid fa-arrow-left me-2"></i>Volver
                    </a>
                </div>

                @if (User.IsInRole("Admin") || User.IsInRole("AdministradorTienda"))
                {
                    <div class="mt-4 pt-3 border-top border-dashed">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="text-decoration-none text-warning small">
                            <i class="bi bi-pencil-square"></i> Editar como administrador
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<hr class="my-5" />

<div class="related-products-section">
    <h3 class="mb-4">También te podría gustar</h3>

    <div class="row">
        @if (ViewBag.Relacionados is List<BaseConLogin.Models.ProductoBase> relacionados && relacionados.Any())
        {
            @foreach (var item in relacionados)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 product-card-hover">
                        <img src="@item.ImagenPrincipal" class="card-img-top"
                             style="height: 180px; object-fit: cover;" alt="@item.Nombre">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-truncate">@item.Nombre</h6>
                            <p class="text-primary fw-bold">@item.PrecioBase €</p>

                            @* IMPORTANTE: Pasamos el returnUrl actual para que el hilo de navegación no se rompa *@
                            <a asp-action="Details" asp-route-id="@item.Id"
                               asp-route-returnUrl="@ViewBag.ReturnUrl"
                               class="btn btn-outline-primary btn-sm mt-auto">
                                Ver más
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No hay productos relacionados en este momento.</p>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .main-img-container {
            height: 450px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .main-display {
            max-height: 100%;
            width: auto;
            object-fit: contain;
            transition: opacity 0.3s ease;
        }

        .thumb-container {
            width: 80px;
            height: 80px;
            cursor: pointer;
            border: 2px solid transparent;
            border-radius: 8px;
            transition: all 0.2s ease;
            opacity: 0.6;
        }

            .thumb-container:hover, .thumb-container.active {
                opacity: 1;
                border-color: #0d6efd;
                transform: translateY(-2px);
            }

        .thumb-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border: none !important;
        }

        .bg-success-subtle {
            background-color: #e1f6eb !important;
        }

        .bg-danger-subtle {
            background-color: #fbe9e9 !important;
        }

        .border-dashed {
            border-style: dashed !important;
        }
    </style>
}

@section Scripts {
    <script>
        function changeImage(src, element) {
            const mainImg = document.getElementById('mainImage');
            mainImg.style.opacity = '0';
            setTimeout(() => {
                mainImg.src = src;
                mainImg.style.opacity = '1';
            }, 200);
            document.querySelectorAll('.thumb-container').forEach(el => el.classList.remove('active'));
            element.parentElement.classList.add('active');
        }

        document.getElementById('formAñadirCarrito')?.addEventListener('submit', function (e) {
            e.preventDefault();
            const form = this;
            const formData = new FormData(form);

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                }
            })
            .then(response => response.json())
                    .then(data => {
            if (data.success) {
                const cartBadge = document.getElementById('cart-badge');
                if (cartBadge) {
                    // 1. Actualizar el número
                    cartBadge.innerText = data.total;
                    cartBadge.style.display = 'inline-block';

                    // 2. Aplicar animación de rebote
                    cartBadge.classList.add('cart-bump');

                    // 3. Quitar la clase después de que termine la animación (0.4s)
                    setTimeout(() => {
                        cartBadge.classList.remove('cart-bump');
                    }, 400);
                }

                // Mostrar el Toast
                const toastEl = document.getElementById('cartToast');
                if (toastEl) {
                    const toast = new bootstrap.Toast(toastEl);
                    toast.show();
                }
            }
        })
            .catch(error => console.error('Error:', error));
        });
    </script>
}