@model BaseConLogin.Models.ViewModels.ProductoSimpleVM

@{
    ViewData["Title"] = Model.ProductoBaseId == 0 ? "Crear Producto" : "Editar Producto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@((Model.ProductoBaseId == 0) ? "Create" : "Edit")" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="ProductoBaseId" />

    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col">
            <label>Precio Base (€)</label>
            @* USO DE TEXTO: Evitamos bloqueos del navegador. Formato "0.00" fuerza SIEMPRE 2 decimales *@
            <input type="text" inputmode="decimal"
                   name="PrecioBase"
                   value="@Model.PrecioBase.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)"
                   class="form-control decimal-input" />
            <span asp-validation-for="PrecioBase" class="text-danger"></span>
        </div>
        <div class="col">
            <label>Stock</label>
            <input asp-for="Stock" type="number" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label>SKU</label>
        <input asp-for="SKU" class="form-control" />
        <span asp-validation-for="SKU" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Categoría</label>
        <select asp-for="CategoriaId" asp-items="Model.Categorias" class="form-control">
            <option value="">-- Selecciona categoría --</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Producto activo</label>
        <input asp-for="Activo" type="checkbox" />
    </div>

    <div class="row g-2">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-3 text-center">
                <input type="hidden" name="SlotsIds[@i]" value="@(i<Model.SlotsIds.Count? Model.SlotsIds[i] : null)" />
                <input type="file" name="Imagenes[@i]" class="form-control imagen-input" data-index="@i" accept="image/*" />

                <div class="form-check mt-1">
                    <input class="form-check-input" type="radio" name="PrincipalIndex" value="@i" @(i == Model.PrincipalIndex ? "checked" : "") />
                    <label class="small">Principal</label>
                </div>

                @if (i < Model.SlotsIds.Count && Model.SlotsIds[i] != null)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ImagenesBorrar" value="@Model.SlotsIds[i]" />
                        <label class="small">Borrar</label>
                    </div>
                }

                <img id="preview_@i"
                     src="@(i < Model.ImagenesActuales.Count ? "/" + Model.ImagenesActuales[i].Ruta : "/imagenes/ProductoSinImagen.png")"
                     class="preview-img" style="max-width: 100%; height: auto;" />
            </div>
        }
    </div>

    <div id="contenedorPropiedades">
        <div class="card-header d-flex justify-content-between align-items-center mt-4">
            <h5>Propiedades y Costes Adicionales</h5>
            <button type="button" class="btn btn-sm btn-success" onclick="agregarPropiedad()">
                <i class="bi bi-plus-circle"></i> Añadir Propiedad
            </button>
        </div>
        @for (int i = 0; i < Model.Propiedades.Count; i++)
        {
            <div class="row g-2 mb-2 align-items-center border-bottom pb-2 property-row">
                <div class="col-md-3">
                    <input name="Propiedades[@i].NombreEnProducto" value="@Model.Propiedades[i].NombreEnProducto" class="form-control" required />
                </div>
                <div class="col-md-2">
                    @* USO DE TEXTO: Formato "0.########" permite HASTA 8 decimales, sin forzar ceros inútiles *@
                    <input type="text" inputmode="decimal"
                           name="Propiedades[@i].Valor"
                           value="@Model.Propiedades[i].Valor.ToString("0.########", System.Globalization.CultureInfo.InvariantCulture)"
                           class="form-control decimal-input" required />
                </div>
                <div class="col-md-3">
                    <select name="Propiedades[@i].Operacion" class="form-select">
                        <option value="Suma" selected="@(Model.Propiedades[i].Operacion == "Suma")">Suma (+)</option>
                        <option value="Multiplicacion" selected="@(Model.Propiedades[i].Operacion == "Multiplicacion")">Multiplicación (x)</option>
                        <option value="Resta" selected="@(Model.Propiedades[i].Operacion == "Resta")">Resta (-)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="number" name="Propiedades[@i].Orden" value="@Model.Propiedades[i].Orden" class="form-control" />
                </div>
                <div class="col-md-1 text-center">
                    <input type="checkbox" name="Propiedades[@i].EsConfigurable" value="true" class="form-check-input" @(Model.Propiedades[i].EsConfigurable ? "checked" : "") />
                    <input type="hidden" name="Propiedades[@i].EsConfigurable" value="false" />
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="this.closest('.property-row').remove()">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        let propIndex = @Model.Propiedades.Count;

        function agregarPropiedad() {
            const contenedor = document.getElementById('contenedorPropiedades');
            const fila = `
                <div class="row g-2 mb-2 align-items-center border-bottom pb-2 property-row">
                    <div class="col-md-3">
                        <input name="Propiedades[${propIndex}].NombreEnProducto" class="form-control" placeholder="Ej: Barnizado" required />
                    </div>
                    <div class="col-md-2">
                        <input type="text" inputmode="decimal" name="Propiedades[${propIndex}].Valor" class="form-control decimal-input" placeholder="0.00" required />
                    </div>
                    <div class="col-md-3">
                        <select name="Propiedades[${propIndex}].Operacion" class="form-select">
                            <option value="Suma">Suma (+)</option>
                            <option value="Multiplicacion">Multiplicación (x)</option>
                            <option value="Resta">Resta (-)</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="number" name="Propiedades[${propIndex}].Orden" value="${propIndex}" class="form-control" />
                    </div>
                    <div class="col-md-1 text-center">
                        <input type="checkbox" name="Propiedades[${propIndex}].EsConfigurable" value="true" class="form-check-input" />
                        <input type="hidden" name="Propiedades[${propIndex}].EsConfigurable" value="false" />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="this.closest('.property-row').remove()">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            `;
            contenedor.insertAdjacentHTML('beforeend', fila);
            propIndex++;
        }

        // ==========================================
        // LA MAGIA: Interceptamos antes de enviar
        // ==========================================
        document.querySelector('form').addEventListener('submit', function (e) {

            // 1. Convertir todas las comas en puntos
            document.querySelectorAll('.decimal-input').forEach(input => {
                if (input.value) {
                    input.value = input.value.replace(',', '.').trim();
                }
            });

            // 2. Re-indexación de propiedades para evitar fallos de lista rota
            const filas = document.querySelectorAll('.property-row');
            filas.forEach((fila, index) => {
                fila.querySelectorAll('input, select').forEach(input => {
                    const name = input.getAttribute('name');
                    if (name && name.includes('Propiedades')) {
                        input.setAttribute('name', name.replace(/\[\d+\]/, `[${index}]`));
                    }
                });
            });

            // 3. Desactivamos validación client-side estricta para asegurar que viaja al servidor
            $(this).validate().cancelSubmit = true;
        });

        // 4. Domamos la validación de jQuery para que NO moleste mientras el usuario escribe
        if ($.validator) {
            $.validator.methods.number = function (value, element) {
                // Acepta tanto coma como punto visualmente sin mostrar texto rojo
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
            }
        }

        // Previsualización de imágenes (Sin cambios)
        document.querySelectorAll(".imagen-input").forEach(input => {
            input.addEventListener("change", e => {
                const file = e.target.files[0];
                const index = e.target.dataset.index;
                if (!file) return;
                const reader = new FileReader();
                reader.onload = function (ev) {
                    const img = document.getElementById("preview_" + index);
                    if (img) img.src = ev.target.result;
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}