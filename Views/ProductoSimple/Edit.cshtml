@model BaseConLogin.Models.ViewModels.ProductoSimpleEditVM

@{
    ViewData["Title"] = "Editar Producto";
}

<h2>Editar Producto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductoBaseId" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PrecioBase" class="form-label"></label>
        <input asp-for="PrecioBase" class="form-control" />
        <span asp-validation-for="PrecioBase" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImagenPrincipal" class="form-label">URL de imagen</label>
        <input asp-for="ImagenPrincipal" class="form-control" />
        <span asp-validation-for="ImagenPrincipal" class="text-danger"></span>
        @if (!string.IsNullOrWhiteSpace(Model.ImagenPrincipal))
        {
            <img src="@Model.ImagenPrincipal" style="width:100px;height:100px;object-fit:cover;margin-top:10px;" />
        }
    </div>

    <div class="form-check mb-3">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
