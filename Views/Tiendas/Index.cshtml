@model IEnumerable<BaseConLogin.Models.Tienda>

@{
    ViewData["Title"] = "Tiendas";
    bool mostrarInactivas = ViewBag.MostrarInactivas != null && (bool)ViewBag.MostrarInactivas;
}

<h2>Tiendas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nueva tienda</a>
</p>

<hr />

<!-- Filtro de tiendas inactivas -->
<form id="formFiltroTiendas" asp-controller="Tiendas" asp-action="Index" method="get" class="mb-3">
    <div class="form-check">
        <input class="form-check-input"
               type="checkbox"
               id="mostrarInactivas"
               name="mostrarInactivas"
               value="true"
               @(mostrarInactivas ? "checked" : "") />
        <label class="form-check-label" for="mostrarInactivas">
            Mostrar tiendas inactivas
        </label>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dominio</th>
            <th>Activa</th>
            <th style="width: 220px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tienda in Model)
        {
            <tr class="@(tienda.Activa ? "" : "table-secondary")">
                <td>@tienda.Nombre</td>
                <td>@tienda.Dominio</td>
                <td>
                    @if (tienda.Activa)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    <div class="d-flex gap-2 justify-content-center">
                        @* Botón Editar *@
                        <a asp-action="Edit" asp-route-id="@tienda.Id"
                           class="btn btn-sm btn-outline-warning border-0 bg-transparent text-warning shadow-none d-inline-flex align-items-center py-1">
                            <i class="bi bi-pencil-square me-1"></i> <span>Editar</span>
                        </a>

                        @if (tienda.Activa)
                        {
                            <form action="/admin/tiendas/desactivar" method="post" class="d-inline" onsubmit="return confirm('¿Seguro?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@tienda.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger border-0 bg-transparent text-danger shadow-none d-inline-flex align-items-center py-1">
                                    <i class="bi bi-shield-x me-1"></i> <span>Desactivar</span>
                                </button>
                            </form>
                        }
                        else
                        {
                            <form action="/admin/tiendas/reactivar" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@tienda.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-success border-0 bg-transparent text-success shadow-none d-inline-flex align-items-center py-1">
                                    <i class="bi bi-shield-check me-1"></i> <span>Reactivar </span>
                                </button>
                            </form>
                        }
                       
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay tiendas para mostrar.</div>
}

@section Scripts {
    <script>
        document.getElementById("mostrarInactivas").addEventListener("change", function() {
            document.getElementById("formFiltroTiendas").submit();
        });
    </script>
}
