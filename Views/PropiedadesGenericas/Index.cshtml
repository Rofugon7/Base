@model IEnumerable<BaseConLogin.Models.PropiedadGenerica>

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Propiedades Genéricas</h2>
            <p class="text-muted">Plantillas de propiedades para asignar a productos</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill">
            <i class="bi bi-plus-circle me-2"></i>Nueva Propiedad
        </a>
    </div>

    <table class="table table-hover align-middle shadow-sm bg-white rounded">
        <thead class="table-dark">
            <tr>
                <th>Nombre (Interno)</th>
                <th>Nombre (Cliente)</th>
                <th>Valor / Operación</th>
                <th>Configuración / Grupo</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.NombreInterno</td>
                    <td>@item.NombreEnProducto</td>
                    <td>
                        <span class="fw-bold">@item.Valor.ToString("N4")€</span>
                        <br />
                        <small class="badge @(item.Operacion == "Suma" ? "bg-info" : "bg-warning text-dark")">
                            @item.Operacion
                        </small>
                    </td>
                    <td>
                        @if (item.EsConfigurable)
                        {
                            <span class="badge bg-success mb-1"><i class="bi bi-gear-fill me-1"></i>Configurable</span>
                            <br />
                            <small class="text-muted">
                                <i class="bi bi-folder2-open me-1"></i>
                                @(item.GrupoPropiedadId.HasValue ? "Grupo asignado" : "Sin grupo")
                            </small>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Propiedad Fija</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-success"
                                    onclick="abrirModalAsignar(@item.Id, '@item.NombreInterno', @item.EsConfigurable.ToString().ToLower())"
                                    title="Asignar a productos">
                                <i class="bi bi-box-arrow-in-right"></i>
                            </button>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('¿Borrar propiedad genérica?')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Modal de Asignación (Mantiene la estructura pero con aviso de configuración) *@
<div class="modal fade" id="modalAsignar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ProcesarAsignacion" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Asignación Masiva</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="PropiedadGenericaId" id="modalPropId" />

                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-grow-1">
                            <p class="mb-0">Propiedad:</p>
                            <strong id="modalPropNombre" class="fs-5 text-primary"></strong>
                        </div>
                        <div id="badgeConfigurableModal"></div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Destino de la asignación:</label>
                        <select class="form-select" id="tipoAsignacion" onchange="alternarCampos()">
                            <option value="categoria">Toda una Categoría</option>
                            <option value="producto">Un Producto específico</option>
                        </select>
                    </div>

                    <div id="divCategoria" class="mb-3">
                        <label class="form-label">Seleccionar Categoría</label>
                        <select name="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                            <option value="">-- Seleccionar --</option>
                        </select>
                    </div>

                    <div id="divProducto" class="mb-3" style="display:none;">
                        <label class="form-label">Seleccionar Producto</label>
                        <select name="ProductoId" class="form-select" asp-items="ViewBag.Productos">
                            <option value="">-- Seleccionar --</option>
                        </select>
                    </div>

                    <div class="alert alert-light border small text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Si la propiedad es <strong>Configurable</strong>, se asignará respetando el grupo definido en la plantilla.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success px-4">Confirmar Asignación</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function abrirModalAsignar(id, nombre, esConfigurable) {
            document.getElementById('modalPropId').value = id;
            document.getElementById('modalPropNombre').innerText = nombre;

            // Mostrar badge de estado en el modal
            const badgeDiv = document.getElementById('badgeConfigurableModal');
            if(esConfigurable) {
                badgeDiv.innerHTML = '<span class="badge bg-success">Configurable</span>';
            } else {
                badgeDiv.innerHTML = '<span class="badge bg-secondary">Fija</span>';
            }

            document.getElementById('tipoAsignacion').value = 'categoria';
            alternarCampos();

            new bootstrap.Modal(document.getElementById('modalAsignar')).show();
        }

        function alternarCampos() {
            const tipo = document.getElementById('tipoAsignacion').value;
            const divCat = document.getElementById('divCategoria');
            const divProd = document.getElementById('divProducto');

            divCat.style.display = (tipo === 'categoria') ? 'block' : 'none';
            divProd.style.display = (tipo === 'producto') ? 'block' : 'none';

            if (tipo === 'categoria') divProd.querySelector('select').value = "";
            else divCat.querySelector('select').value = "";
        }
    </script>
}