@model BaseConLogin.Models.PropiedadGenerica

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Propiedades</a></li>
            <li class="breadcrumb-item active">Nueva</li>
        </ol>
    </nav>

    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="bi bi-plus-lg me-2"></i>Crear Propiedad Genérica</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Nombre Interno (Uso Administrativo)</label>
                        <input asp-for="NombreInterno" class="form-control" placeholder="Ej: Barnizado Premium" />
                        <span asp-validation-for="NombreInterno" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Nombre en Producto (Nombre de la Opción)</label>
                        <input asp-for="NombreEnProducto" class="form-control" placeholder="Ej: Barniz UV Mate" />
                        <span asp-validation-for="NombreEnProducto" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Valor / Precio</label>
                        <div class="input-group">
                            <input asp-for="Valor" class="form-control" type="number" step="0.0001" />
                            <span class="input-group-text">€</span>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Operación</label>
                        <select asp-for="Operacion" class="form-select">
                            <option value="Suma">Suma (+)</option>
                            <option value="Resta">Resta (-)</option>
                            <option value="Multiplicacion">Multiplicación (x)</option>
                        </select>
                    </div>

                    <div class="col-12 mt-3">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="EsConfigurable" class="form-check-input" type="checkbox" id="chkEsConfigurable">
                                    <label class="form-check-label fw-bold" for="chkEsConfigurable">
                                        ¿Es una opción seleccionable por el cliente?
                                    </label>
                                    <div class="form-text">Si se marca, aparecerá como opción en la ficha del producto.</div>
                                </div>

                                <div id="divGrupoSeleccion" style="display:none;">
                                    <label class="form-label fw-bold">Asignar a Grupo de Propiedades</label>
                                    <select asp-for="GrupoPropiedadId" asp-items="ViewBag.Grupos" class="form-select">
                                        <option value="">-- Selecciona un grupo (Ej: Tipo de Papel, Acabados...) --</option>
                                    </select>
                                    <span asp-validation-for="GrupoPropiedadId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary px-5">Guardar Propiedad</button>
                    <a asp-action="Index" class="btn btn-link text-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            function toggleGrupo() {
                if ($('#chkEsConfigurable').is(':checked')) {
                    $('#divGrupoSeleccion').slideDown();
                } else {
                    $('#divGrupoSeleccion').slideUp();
                    $('#GrupoPropiedadId').val(''); // Resetea el grupo si no es configurable
                }
            }

            $('#chkEsConfigurable').change(function () {
                toggleGrupo();
            });

            // Ejecutar al cargar por si hay errores de validación y el check quedó marcado
            toggleGrupo();
        });
    </script>
}