@model IEnumerable<BaseConLogin.Models.Proyectos>

@{
    ViewData["Title"] = "Listado de Proyectos";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" class="form-control" placeholder="Buscar proyectos..." />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Proyecto</a>
</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card-flip">
                <div class="card front">
                    @if (!string.IsNullOrEmpty(item.ImagenPortada))
                    {
                        <img src="~/@item.ImagenPortada" class="card-img-top rounded-top" alt="@item.Nombre" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top placeholder rounded-top d-flex align-items-center justify-content-center" style="height: 200px; background-color:#ddd;">
                            Sin imagen
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.Nombre</h5>
                    </div>
                </div>

                <div class="card back">
                    <div class="card-body d-flex flex-column justify-content-between h-100">
                        <p class="card-text truncate-text ">@item.Descripcion</p>
                        <div class="mt-auto d-flex justify-content-around">
                            @if (item.Autor == ViewBag.UserId)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                            }
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                            @if (item.Autor == ViewBag.UserId)
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card-flip {
        perspective: 1000px;
        border-radius: 15px;
        height: 320px;
        position: relative;
        overflow: hidden; /* Evita desbordes */
    }

        .card-flip .card {
            width: 100%;
            height: 100%;
            border-radius: 15px;
            backface-visibility: hidden;
            transition: transform 0.6s;
            position: absolute;
            top: 0;
            left: 0;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 15px;
            box-sizing: border-box;
            overflow: hidden;
        }

        .card-flip .front {
            background-color: #fff;
            z-index: 2;
            transform: rotateY(0deg);
        }

        .card-flip .back {
            background-color: #f8f9fa;
            transform: rotateY(180deg);
            overflow: hidden; /* Evita que el contenido se salga */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }


        .card-flip:hover .front {
            transform: rotateY(180deg);
        }

        .card-flip:hover .back {
            transform: rotateY(0deg);
            z-index: 3;
        }

    /* Truncar texto con ... en múltiples líneas */
    .truncate-text {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 8; /* Ajusta aquí cuántas líneas máximas quieres mostrar */
        -webkit-box-orient: vertical;
    }

</style>
