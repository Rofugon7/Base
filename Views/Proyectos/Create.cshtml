@model BaseConLogin.Models.Proyectos

@{
    ViewData["Title"] = "Crear Proyecto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Subtitulo" class="form-label"></label>
        <input asp-for="Subtitulo" class="form-control" />
        <span asp-validation-for="Subtitulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Aportaciones" class="form-label"></label>
        <input asp-for="Aportaciones" class="form-control" />
        <span asp-validation-for="Aportaciones" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaInicio" class="form-label"></label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaFin" class="form-label"></label>
        <input asp-for="FechaFin" type="date" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Categoria" class="form-label"></label>
        <input asp-for="Categoria" class="form-control" />
        <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ubicacion" class="form-label"></label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Adelanto" class="form-label"></label>
        <textarea asp-for="Adelanto" class="form-control"></textarea>
        <span asp-validation-for="Adelanto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Recompensa" class="form-label"></label>
        <textarea asp-for="Recompensa" class="form-control"></textarea>
        <span asp-validation-for="Recompensa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Calendario" class="form-label"></label>
        <input asp-for="Calendario" class="form-control" />
        <span asp-validation-for="Calendario" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Imagen de portada</label>
        <input type="file" name="imagenPortadaFile" class="form-control" accept="image/*" />
    </div>

    <div class="mb-3">
        <label class="form-label">Archivo PDF</label>
        <input type="file" name="archivoPdfFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tags</label>
        <select name="selectedTags" class="form-control" multiple>
            @foreach (var tag in ViewBag.Tags)
            {
                <option value="@tag.Id">@tag.Nombre</option>
            }
        </select>
        <small>Puedes seleccionar varios usando Ctrl + click</small>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
