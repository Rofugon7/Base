@model IEnumerable<BaseConLogin.Models.Pedido>
@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam me-2"></i>Mis Pedidos</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-left"></i> Seguir comprando
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm border-0 p-4 text-center">
            <p class="mb-0 fs-5">Aún no has realizado ningún pedido.</p>
        </div>
    }
    else
    {
        <div class="card shadow border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-muted">
                        <tr>
                            <th class="ps-4">Pedido ID</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@pedido.Id</td>
                                <td>@pedido.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-bold">@pedido.Total.ToString("C")</td>
                                <td>
                                    @{
                                        // Sincronización de colores con Panel de Gestión
                                        var badgeClass = pedido.Estado switch
                                        {
                                            "Finalizado" => "bg-dark",
                                            "Enviado" => "bg-primary",
                                            "Pagado" => "bg-success",
                                            "Cancelado" => "bg-danger",
                                            "Pendiente" => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge rounded-pill @badgeClass">
                                        <i class="bi @(pedido.Estado == "Finalizado" ? "bi-check-all" : "bi-dot") me-1"></i>
                                        @pedido.Estado
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        @* Ver Detalles *@
                                        <a asp-action="Detalle" asp-route-id="@pedido.Id" class="btn btn-sm btn-dark" title="Ver Detalle">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @* Repetir Pedido *@
                                        <form asp-action="RepetirPedido" asp-route-id="@pedido.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-primary" title="Repetir este pedido">
                                                <i class="bi bi-cart-plus"></i>
                                            </button>
                                        </form>

                                        @* Lógica de Facturas Dobles *@
                                        @{
                                            // En tu controlador, en el método MisPedidos, deberías pasar un ViewBag
                                            // o incluir las facturas en el modelo para saber cuáles existen.
                                            // Aquí asumo la lógica basada en el estado:
                                        }

                                        @* 1. Factura Original: Se muestra si el pedido NO es Pendiente (porque ya se pagó en algún momento) *@
                                        @if (pedido.Estado != "Pendiente")
                                        {
                                            <a asp-action="DescargarFactura"
                                               asp-route-id="@pedido.Id"
                                               asp-route-esRectificativa="false"
                                               class="btn btn-sm btn-outline-danger"
                                               title="Descargar Factura Original">
                                                <i class="bi bi-file-earmark-pdf"></i>
                                            </a>
                                        }

                                        @* 2. Factura Rectificativa: Se muestra solo si el pedido está Cancelado *@
                                        @if (pedido.Estado == "Cancelado")
                                        {
                                            <a asp-action="DescargarFactura"
                                               asp-route-id="@pedido.Id"
                                               asp-route-esRectificativa="true"
                                               class="btn btn-sm btn-outline-warning"
                                               title="Descargar Factura Rectificativa (Abono)">
                                                <i class="bi bi-file-earmark-minus"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Inicializar tooltips de Bootstrap si los usas
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}