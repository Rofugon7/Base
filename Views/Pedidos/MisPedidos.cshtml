@model IEnumerable<BaseConLogin.Models.Pedido>
@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam me-2"></i>Mis Pedidos</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">Seguir comprando</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm border-0 p-4 text-center">
            <p class="mb-0 fs-5">Aún no has realizado ningún pedido.</p>
        </div>
    }
    else
    {
        <div class="card shadow border-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light text-muted">
                        <tr>
                            <th class="ps-4">Pedido ID</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th class="text-end pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@pedido.Id</td>
                                <td>@pedido.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-bold">@pedido.Total.ToString("C")</td>
                                <td>
                                    <span class="badge rounded-pill @(pedido.Estado == "Pagado" ? "bg-success" : "bg-warning text-dark")">
                                        @pedido.Estado
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Detalle" asp-route-id="@pedido.Id" class="btn btn-sm btn-dark">
                                        Ver detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>