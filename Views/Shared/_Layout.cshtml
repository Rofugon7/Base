@using BaseConLogin.Services.Tiendas
@using BaseConLogin.Services.Carritos
@using Microsoft.AspNetCore.Identity
@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>


@inject ITiendaContext TiendaContext
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@inject ICarritoService CarritoService

@{
    string usuarioConectado = "";
    int carritoCount = 0;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);

        if (user != null)
        {
            usuarioConectado = user.Email ?? "";
            isAdmin = await UserManager.IsInRoleAsync(user, "Admin");

            // Por usuario (no por tienda) como tienes en la interfaz
            carritoCount = await CarritoService.ObtenerCantidadItemsAsync(user.Id);
        }
    }

    var siteUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
}

<script type="application/ld+json">
@Html.Raw($@"{{
  ""@context"": ""https://schema.org"",
  ""@type"": ""WebSite"",
  ""name"": ""BaseConLogin"",
  ""url"": ""{siteUrl}""
}}")
</script>

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BaseConLogin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        header {
            background: #333;
            color: white;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            nav ul {
                list-style: none;
                padding: 0;
                margin: 0;
                display: flex;
            }

            nav li {
                position: relative;
            }

            nav a,
            nav button {
                display: block;
                padding: 14px 18px;
                color: white;
                text-decoration: none;
                background: none;
                border: none;
                cursor: pointer;
            }

                nav a:hover,
                nav button:hover {
                    background: #444;
                }

            /* Submenús */
            nav li ul {
                display: none;
                position: absolute;
                background: #444;
                min-width: 180px;
                top: 100%;
                left: 0;
                z-index: 1000;
                flex-direction: column;
            }

            nav li:hover > ul {
                display: block;
            }

            nav li ul li {
                width: 100%;
            }

        /* Zona derecha */
        .right-menu {
            align-items: center;
        }

        main {
            padding: 20px;
            min-height: calc(100vh - 120px);
        }

        footer {
            background: #333;
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>

    @if (ViewData["Canonical"] != null)
    {
        <link rel="canonical" href="@ViewData["Canonical"]" />
    }

    <link rel="canonical" href="@ViewData["Canonical"]" />

    <meta name="robots" content="index,follow" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="BaseConLogin" />

    @if (ViewData["Title"] != null)
    {
        <meta property="og:title" content="@ViewData["Title"]" />
        <meta name="twitter:title" content="@ViewData["Title"]" />
    }

    @if (ViewData["Description"] != null)
    {
        <meta name="description" content="@ViewData["Description"]" />
        <meta property="og:description" content="@ViewData["Description"]" />
    }

    @{
    var pageNumber = ViewData["PageNumber"] as int? ?? 1;
}

@if (pageNumber > 1)
{
    <meta name="robots" content="noindex,follow" />
}
else
{
    <meta name="robots" content="index,follow" />
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

</head>

<body>

    <header>
        <nav>

            <!-- MENÚ IZQUIERDA -->
            <ul>

                <li>
                    <a asp-controller="Home" asp-action="Index">Inicio</a>
                </li>

                <li>
                    <a asp-controller="Proyectos" asp-action="Index">Proyectos</a>
                </li>

                @if (TiendaContext.HayTienda)
                {
                    <li>
                        <a href="#">Tienda</a>

                        <ul>
                            <li>
                                <a asp-controller="Productos" asp-action="Index">
                                    Productos
                                </a>
                            </li>

                            <li>
                                <a asp-controller="Pedidos" asp-action="Index">
                                    Pedidos
                                </a>
                            </li>

                            <li>
                                <a asp-controller="Configuracion" asp-action="Index">
                                    Configuración
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @if (isAdmin)
{
    <li>
        <a href="#">Administración</a>

        <ul>
            <li>
                <a asp-controller="Tiendas" asp-action="Index">
                    Tiendas
                </a>
            </li>
            <li>
                <a asp-controller="ProductoSimple" asp-action="Index">
                    Productos
                </a>
            </li>
        </ul>
    </li>
}


                <li>
                    <a asp-controller="Home" asp-action="Contacto">
                        Contacto
                    </a>
                </li>

            </ul>


            <!-- MENÚ DERECHA -->
            <ul class="right-menu">

                @if (SignInManager.IsSignedIn(User))
                {
                    <li>
                        <span>@usuarioConectado</span>
                    </li>

                    <li>
                        <a asp-controller="Carrito"
   asp-action="Index"
   class="nav-link position-relative"
   id="cart-link">

    <i class="fa-solid fa-cart-shopping"></i>

    <span id="cart-count"
          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
          style="display:none;">
        0
    </span>
</a>

                    </li>

                    <li>
                        <form asp-area="Identity"
      asp-page="/Account/Logout"
      method="post"
      class="d-inline">

    <button type="submit"
            class="btn btn-link nav-link p-0">
        Cerrar sesión
    </button>

</form>

                    </li>
                }
                else
                {
                    <li>
                        <a asp-area="Identity"
                           asp-page="/Account/Login">
                            Iniciar sesión
                        </a>
                    </li>
                }

            </ul>

        </nav>
    </header>


    <main role="main">
        @RenderBody()
    </main>


    <footer>
        &copy; @DateTime.Now.Year - BaseConLogin
    </footer>


    @RenderSection("Scripts", required: false)

    <script>
async function actualizarCarritoHeader() {

    try {

        const res = await fetch('/carrito/cantidad');

        if (!res.ok) return;

        const data = await res.json();

        const badge = document.getElementById('cart-count');

        if (!badge) return;

        if (data.total > 0) {
            badge.textContent = data.total;
            badge.style.display = 'inline-block';
        } else {
            badge.style.display = 'none';
        }

    } catch (e) {
        console.error('Error carrito:', e);
    }
}

document.addEventListener('DOMContentLoaded', actualizarCarritoHeader);
</script>


</body>
</html>
