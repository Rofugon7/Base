            --color-enlaces: @colorEnlaces;
            --color-texto: @colorTexto;
        }

        /* Aplicación inmediata de colores base */
        body {
            color: var(--color-texto);
        }

        a {
            color: var(--color-enlaces);
        }

        /* Forzar el estilo de tus botones personalizados */
        .btn-brand, .btn-primary {
            background-color: var(--color-botones) !important;
            border-color: var(--color-botones) !important;
            color: var(--color-botones-texto) !important;
        }

        .social-icon {
            background-color: var(--color-marca) !important; /* Fondo con el color de marca */
            color: var(--color-botones-texto) !important; /* Icono con el color de texto de botones */
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 35px;
            height: 35px;
            border-radius: 4px;
            transition: transform 0.2s, filter 0.2s;
        }

            .social-icon:hover {
                transform: scale(1.1);
                filter: brightness(110%);
            }

        .nav-link-custom {
            color: var(--color-texto) !important; /* El mismo que el resto del menú */
