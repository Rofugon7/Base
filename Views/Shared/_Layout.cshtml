@using BaseConLogin.Services.Tiendas
@using BaseConLogin.Services.Carritos
@using Microsoft.AspNetCore.Identity
@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>

@inject ITiendaContext TiendaContext
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@inject ICarritoService CarritoService

@{
    string usuarioConectado = "";
    int carritoCount = 0;
    bool isAdmin = false;

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            usuarioConectado = user.Email ?? "";
            isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
            carritoCount = await CarritoService.ObtenerCantidadItemsAsync(user.Id);
        }
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BaseConLogin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li><a asp-controller="Proyectos" asp-action="Index">Proyectos</a></li>
                @if (TiendaContext.HayTienda)
                {
                    <li>
                        <a href="#">Tienda</a>
                        <ul>
                            <li><a asp-controller="Productos" asp-action="Index">Productos</a></li>
                            <li><a asp-controller="Pedidos" asp-action="Index">Pedidos</a></li>
                            <li><a asp-controller="Configuracion" asp-action="Index">Configuración</a></li>
                        </ul>
                    </li>
                }
                @if (isAdmin)
                {
                    <li>
                        <a href="#">Administración</a>
                        <ul>
                            <li><a asp-controller="Tiendas" asp-action="Index">Tiendas</a></li>
                            <li><a asp-controller="Categorias" asp-action="Index">Categorias</a></li>
                            <li><a asp-controller="ProductoSimple" asp-action="Index">Productos Sencillos</a></li>
                        </ul>
                    </li>
                }
                <li><a asp-controller="Home" asp-action="Contacto">Contacto</a></li>
            </ul>

            <!-- BUSCADOR CENTRAL -->
            @await Component.InvokeAsync("HeaderSearch")

            <!-- MENÚ DERECHA -->
            <ul class="right-menu">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li><span>@usuarioConectado</span></li>
                    <li>
                        <a asp-controller="Carrito" asp-action="Index" class="nav-link position-relative" id="cart-link">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display:none;">0</span>
                        </a>
                    </li>
                    <li>
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link p-0">Cerrar sesión</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a></li>
                }
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - BaseConLogin
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
