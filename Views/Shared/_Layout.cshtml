@using BaseConLogin.Services.Tiendas
@using BaseConLogin.Services.Carritos
@using Microsoft.AspNetCore.Identity
@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>

@inject ITiendaContext TiendaContext
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject ICarritoService CarritoService

@{
    string usuarioConectado = "";
    int carritoCount = 0;
    bool isAdmin = false;

    int tiendaId = TiendaContext.ObtenerTiendaIdOpcional() ?? 0;

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            usuarioConectado = user.Email ?? "";
            isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
        }
    }

    // Conteo inicial al cargar la página (Server-side)
    carritoCount = await CarritoService.ObtenerCantidadItemsAsync(tiendaId);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BaseConLogin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    @RenderSection("Styles", required: false)
    <link rel="stylesheet" asp-append-version="true" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .cart-wrapper {
            position: relative;
            display: inline-block;
        }

        #cart-badge {
            font-size: 0.65rem;
            padding: 0.25em 0.45em;
            transform: translate(25%, -25%);
        }

        @@keyframes pulse-bump {
            0% {
                transform: translate(25%, -25%) scale(1);
            }

            50% {
                transform: translate(25%, -25%) scale(1.5);
            }

            100% {
                transform: translate(25%, -25%) scale(1);
            }
        }

        .cart-bump {
            animation: pulse-bump 0.4s ease-out;
            background-color: #ffc107 !important; /* Cambia a color amarillo momentáneamente */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3 shadow-sm">
            <div class="container-fluid">
                <ul class="navbar-nav me-auto flex-row gap-3">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Proyectos" asp-action="Index">Proyectos</a></li>
                    @await Component.InvokeAsync("CategoriasMenu")
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contacto</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-shield-lock-fill me-1 text-primary"></i> Panel Admin
                            </a>
                            <ul class="dropdown-menu shadow border-0" style="min-width: 250px;" aria-labelledby="adminDropdown">
                                <li><h6 class="dropdown-header text-uppercase small fw-bold text-muted">Ventas e Inventario</h6></li>
                                <li><a class="dropdown-item py-2" asp-controller="Pedidos" asp-action="Gestion"><i class="bi bi-cart-check me-2 text-secondary"></i> Pedidos</a></li>
                                <li>
                                    <a class="dropdown-item py-2" asp-controller="Home" asp-action="ListadoPresupuestos">
                                        <i class="bi bi-clipboard-check me-2 text-secondary"></i> Presupuestos
                                    </a>
                                </li>
                                <li><a class="dropdown-item py-2" asp-controller="Productos" asp-action="Index"><i class="bi bi-box-seam me-2 text-secondary"></i> Productos</a></li>

                                <li><hr class="dropdown-divider"></li>

                                <li><h6 class="dropdown-header text-uppercase small fw-bold text-muted">Newsletter y Marketing</h6></li>
                                <li><a class="dropdown-item py-2" asp-controller="Newsletter" asp-action="Index"><i class="bi bi-people me-2 text-secondary"></i> Lista de Suscriptores</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="Newsletter" asp-action="Enviar"><i class="bi bi-send me-2 text-secondary"></i> Redactar y Enviar</a></li>

                                <li><hr class="dropdown-divider"></li>

                                <li><h6 class="dropdown-header text-uppercase small fw-bold text-muted">Sistema</h6></li>
                                <li>
                                    <a class="dropdown-item py-2" asp-controller="Newsletter" asp-action="Configuracion">
                                        <i class="bi bi-gear-fill me-2 text-secondary"></i> Configurar Servidor Correo
                                    </a>
                                </li>
                                <li><a class="dropdown-item py-2" asp-controller="Tiendas" asp-action="Index"><i class="bi bi-shop me-2 text-secondary"></i> Tiendas</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <div class="d-none d-md-block mx-auto" style="width: 40%;">
                    @await Component.InvokeAsync("HeaderSearch")
                </div>

                <ul class="navbar-nav ms-auto flex-row align-items-center gap-3">
                    <li class="nav-item">
                        <a asp-controller="Carrito" asp-action="Index" class="nav-link cart-wrapper p-2">
                            <i class="fa-solid fa-cart-shopping fs-5 text-white"></i>
                            <span id="cart-badge" class="position-absolute top-0 start-50 badge rounded-pill bg-danger"
                                  style="@(carritoCount > 0 ? "" : "display:none;")">
                                @carritoCount
                            </span>
                        </a>
                    </li>

                    <ul class="navbar-nav">
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<ApplicationUser> SignInManager
                        @inject UserManager<ApplicationUser> UserManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            @* OBTENEMOS EL USUARIO PARA MOSTRAR SU NOMBRE PERSONALIZADO *@
                            var user = await UserManager.GetUserAsync(User);
                            var nombreAMostrar = user?.NombreCompleto ?? User.Identity?.Name;

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle btn btn-outline-primary border-0 px-3" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> @nombreAMostrar
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Perfil" asp-action="Index">
                                            <i class="bi bi-person me-2"></i> Mi Perfil
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Pedidos" asp-action="MisPedidos">
                                            <i class="bi bi-bag-check me-2"></i> Mis Pedidos
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="dropdown-item py-2 text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white px-3 ms-lg-2" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white px-3 ms-lg-2" asp-area="Identity" asp-page="/Account/Register">
                                    Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100">
        <div id="cartToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    ¡Producto añadido al carrito!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Función para actualizar el badge visualmente
                function actualizarContadorCarrito() {
            fetch('/carrito/cantidad')
                .then(response => {
                    if (!response.ok) throw new Error("Error en red");
                    return response.json();
                })
                .then(data => {
                    const badge = document.getElementById('cart-badge');
                    if (badge) {
                        // Intentamos leer 'total' o 'Total' por si acaso
                        const cantidad = data.total !== undefined ? data.total : data.Total;

                        badge.innerText = cantidad;

                        // Forzamos la visibilidad si hay más de 0
                        if (cantidad > 0) {
                            badge.setAttribute("style", "display: inline-block !important;");
                        } else {
                            badge.style.display = 'none';
                        }
                        console.log("Contador actualizado a:", cantidad);
                    }
                })
                .catch(err => console.error("Fallo al actualizar badge:", err));
        }

        // Función para mostrar notificaciones Toast
        function mostrarNotificacion(mensaje, esError = false) {
            const toastEl = document.getElementById('cartToast');
            const toastMessage = document.getElementById('toastMessage');

            toastMessage.innerText = mensaje;
            toastEl.classList.remove('bg-success', 'bg-danger');
            toastEl.classList.add(esError ? 'bg-danger' : 'bg-success');

            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>