}


@{
    string usuarioConectado = "";
    int carritoCount = 0;
    bool isAdmin = false;

    int tiendaId = TiendaContext.ObtenerTiendaIdOpcional() ?? 0;

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
