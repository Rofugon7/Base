@model IEnumerable<BaseConLogin.Models.GrupoPropiedad>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Grupos de Propiedades</h2>
                <a asp-controller="ProductoSimple" asp-action="Index" class="btn btn-outline-secondary btn-sm">Volver a Productos</a>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post" class="row g-3">
                        <div class="col-auto">
                            <label class="form-label fw-bold">Nuevo Grupo:</label>
                        </div>
                        <div class="col">
                            <input type="text" name="nombre" class="form-control" placeholder="Ej: Gramaje, Color, Tamaño..." required />
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Añadir Grupo</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre del Grupo</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Nombre</td>
                                <td class="text-end">
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('¿Borrar este grupo? Los productos que lo usen podrían dejar de mostrarlo correctamente.')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted p-4">No hay grupos creados todavía.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>