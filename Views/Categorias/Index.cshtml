@model IEnumerable<BaseConLogin.Models.Categoria>
@{
    ViewData["Title"] = "Gestión de Categorías";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-tags-fill me-2 text-primary"></i>Categorías</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Nueva Categoría
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Nombre</th>
                        <th>Descripción</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@c.Nombre</td>
                            <td class="text-muted">@c.Descripcion</td>
                            <td class="text-center">
                                @if (c.Activa)
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success border border-success px-3">Activa</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-danger-subtle text-danger border border-danger px-3">Inactiva</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                            <td class="text-end pe-4">
                                @{
                                    // Simplificamos la lógica de permisos
                                    bool esAdmin = User.IsInRole("Admin");
                                    bool esAdminTienda = User.IsInRole("AdministradorTienda");

                                    // Obtenemos el ID de tienda del usuario actual de forma segura
                                    string tiendaIdClaim = User.FindFirst("TiendaId")?.Value;
                                    int tiendaIdUsuario = 0;
                                    int.TryParse(tiendaIdClaim, out tiendaIdUsuario);

                                    // Puede editar si es Admin global O si es admin de la tienda dueña de la categoría
                                    bool puedeEditar = esAdmin || (esAdminTienda && c.TiendaId == tiendaIdUsuario);
                                }

                                @if (puedeEditar)
                                {
                                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-warning border-0 me-1">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-outline-danger border-0">
                                        <i class="bi bi-trash3"></i> Borrar
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted small italic">Sin permisos</span>
                                }
                            </td>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>