@model BaseConLogin.Models.Categoria
@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-danger shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="text-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill display-1"></i>
                    </div>
                    <h3 class="fw-bold">¿Confirmar eliminación?</h3>
                    <p class="text-muted">Estás a punto de borrar la categoría <strong>"@Model.Nombre"</strong>. Esta acción no se puede deshacer.</p>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">Sí, eliminar definitivamente</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">No, mantener categoría</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>