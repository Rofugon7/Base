@model BaseConLogin.Models.Pedido
@{
    ViewData["Title"] = "¡Pedido Confirmado!";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
            </div>

            <h1 class="fw-bold mb-2">¡Muchas gracias por tu compra!</h1>
            <p class="text-muted fs-5 mb-5">Tu pedido ha sido recibido y está siendo procesado.</p>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-dark text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="mb-0 h5">Resumen del Pedido</span>
                        <span class="badge bg-primary">ID: #@Model.Id</span>
                    </div>
                </div>
                <div class="card-body p-4 text-start">
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <h6 class="text-muted text-uppercase small fw-bold">Fecha</h6>
                            <p class="mb-0">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-sm-6 text-sm-end">
                            <h6 class="text-muted text-uppercase small fw-bold">Estado</h6>
                            <span class="badge rounded-pill bg-warning text-dark px-3">@Model.Estado</span>
                        </div>
                    </div>

                    <table class="table table-borderless border-top pt-3">
                        <thead class="text-muted small">
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cant.</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.NombreProducto</td>
                                    <td class="text-center">@item.Cantidad</td>
                                    <td class="text-end">@item.Total.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="border-top">
                                <td colspan="2" class="fs-5 fw-bold pt-3 text-end">Total Pagado:</td>
                                <td class="fs-5 fw-bold pt-3 text-end text-success">@Model.Total.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark px-4">
                    <i class="bi bi-house-door me-2"></i>Ir al Inicio
                </a>
                <button onclick="window.print()" class="btn btn-light border px-4">
                    <i class="bi bi-printer me-2"></i>Imprimir Recibo
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilo para que el recibo se vea bien al imprimir */
    @@media print {
        .btn, .navbar, footer {
            display: none !important;
        }

        .card {
            border: 1px solid #dee2e6 !important;
            box-shadow: none !important;
        }
    }
</style>