@model BaseConLogin.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Finalizar Pedido";
}

<div class="container py-4">
    <h2 class="mb-4 fw-bold"><i class="bi bi-credit-card me-2"></i>Finalizar Compra</h2>

    <form asp-action="Confirmar" asp-route-tiendaId="@Model.TiendaId" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="TiendaId" />
        <div class="row g-5">
            <div class="col-md-7">
                <div class="card shadow-sm border-0 p-4">
                    <h4 class="mb-3">Datos de Entrega</h4>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Nombre Completo</label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="Juan Pérez" />
                            <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                        </div>
                        <div class="col-12">
                            <label class="form-label">DNI / NIF</label>
                            <input asp-for="DniCif" class="form-control bg-light" readonly />
                            <div class="form-text" style="font-size: 0.7rem;">Para cambios, edita tu perfil.</div>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Dirección de Envío</label>
                            <input asp-for="Direccion" class="form-control" placeholder="Calle Ejemplo 123" />
                            <span asp-validation-for="Direccion" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ciudad</label>
                            <input asp-for="Ciudad" class="form-control" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="CodigoPostal" class="form-label"></label>
                            <input asp-for="CodigoPostal" class="form-control" />
                            <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0 p-4 mt-4">
                    <h4 class="mb-3"><i class="bi bi-truck me-2"></i>Método de Envío</h4>
                    <div class="list-group">

                        <label class="list-group-item d-flex justify-content-between align-items-center py-3" style="cursor: pointer;">
                            <div>
                                <input class="form-check-input me-2" type="radio" asp-for="TipoEnvioSeleccionado" value="Estandar"
                                       data-precio="@Model.PrecioEstandar" checked>
                                <span class="fw-bold">Envío Estándar</span>
                                <div class="text-muted small ms-4">Entrega en 3-5 días hábiles</div>
                            </div>
                            <span class="badge @(Model.PrecioEstandar == 0 ? "bg-success" : "bg-secondary") rounded-pill">
                                @(Model.PrecioEstandar == 0 ? "Gratis" : Model.PrecioEstandar.ToString("C2"))
                            </span>
                        </label>

                        <label class="list-group-item d-flex justify-content-between align-items-center py-3" style="cursor: pointer;">
                            <div>
                                <input class="form-check-input me-2" type="radio" asp-for="TipoEnvioSeleccionado" value="Urgente"
                                       data-precio="@Model.PrecioUrgente">
                                <span class="fw-bold text-danger"><i class="bi bi-lightning-fill"></i> Envío Urgente</span>
                                <div class="text-muted small ms-4">Entrega en 24h</div>
                            </div>
                            <span class="badge bg-secondary rounded-pill">@Model.PrecioUrgente.ToString("C2")</span>
                        </label>

                        @if (Model.PermitirRecogidaTienda)
                        {
                            <label class="list-group-item d-flex justify-content-between align-items-center py-3" style="cursor: pointer;">
                                <div>
                                    <input class="form-check-input me-2" type="radio" asp-for="TipoEnvioSeleccionado" value="Recogida"
                                           data-precio="0">
                                    <span class="fw-bold">Recogida en Tienda</span>
                                    <div class="text-muted small ms-4">Pasa por nuestro local a recogerlo</div>
                                </div>
                                <span class="badge bg-success rounded-pill">Gratis</span>
                            </label>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card shadow-sm border-0 bg-light p-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span>Tu Pedido</span>
                        <span class="badge bg-primary rounded-pill">@Model.Carrito.Items.Count</span>
                    </h4>
                    <ul class="list-group list-group-flush mb-3">
                        @foreach (var item in Model.Carrito.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between lh-sm bg-transparent">
                                <div>
                                    <h6 class="my-0">@item.Nombre</h6>
                                    <small class="text-muted">Cantidad: @item.Cantidad</small>
                                </div>
                                <span class="text-muted">@((item.PrecioUnitario * item.Cantidad).ToString("C"))</span>
                            </li>
                        }

                        <li class="list-group-item d-flex justify-content-between bg-transparent">
                            <span class="text-muted">Gastos de envío</span>
                            <span id="displayGastosEnvio" class="@(Model.PrecioEstandar == 0 ? "text-success fw-bold" : "")">
                                @(Model.PrecioEstandar == 0 ? "Gratis" : Model.PrecioEstandar.ToString("C2"))
                            </span>
                        </li>

                        <li class="list-group-item d-flex justify-content-between bg-transparent">
                            <strong class="fs-5">Total</strong>
                            <strong id="displayTotal" class="fs-5 text-success">
                                @((Model.Carrito.Items.Sum(i => i.PrecioUnitario * i.Cantidad) + Model.PrecioEstandar).ToString("C2"))
                            </strong>
                        </li>
                    </ul>

                    <input type="hidden" name="GastosEnvio" id="inputGastosEnvioHidden" value="@Model.PrecioEstandar.ToString("F2").Replace(",", ".")" />

                    <div class="d-grid gap-2">
                        <button class="btn btn-success btn-lg shadow" type="submit">
                            <i class="bi bi-lock-fill me-2"></i>Confirmar y Pagar
                        </button>
                        <a asp-controller="Carrito" asp-action="Index" class="btn btn-link text-muted">Editar carrito</a>
                    </div>
                </div>
                <div class="card shadow-sm border-0 bg-light p-4">
                <h4 class="mb-3">Método de Pago</h4>
                <div class="my-3">
                    <div class="form-check">
                        <input asp-for="MetodoPagoSeleccionado" value="Tarjeta" type="radio" class="form-check-input" checked>
                        <label class="form-check-label">Tarjeta de Crédito (Redsys)</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="MetodoPagoSeleccionado" value="PayPal" type="radio" class="form-check-input">
                        <label class="form-check-label">PayPal</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="MetodoPagoSeleccionado" value="Transferencia" type="radio" class="form-check-input">
                        <label class="form-check-label">Transferencia Bancaria</label>
                    </div>
                </div>
            </div>
            </div>
            
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('input[name="TipoEnvioSeleccionado"]').change(function () {
                // 1. Obtener datos
                        // Dentro de tu script en la sección de cambio de radio button:
        var precioEnvio = parseFloat($(this).data('precio'));

        // Usa una variable limpia para el subtotal del producto
        // Asegúrate de que este valor sea SOLO el de los productos (4.00 en tu caso)
        var subtotalProductos = parseFloat("@Model.Carrito.Items.Sum(i => i.PrecioUnitario * i.Cantidad).ToString().Replace(",", ".")");

        var nuevoTotal = subtotalProductos + precioEnvio;

        // Actualizar el texto del total
        $('#displayTotal').text(nuevoTotal.toLocaleString('es-ES', {
            style: 'currency',
            currency: 'EUR'
        }));

        var formatoMoneda = { style: 'currency', currency: 'EUR' };
                // 4. Actualizar Interfaz
                if (precioEnvio === 0) {
                    $('#displayGastosEnvio').text("Gratis").addClass("text-success fw-bold");
                } else {
                    $('#displayGastosEnvio').text(precioEnvio.toLocaleString('es-ES', formatoMoneda)).removeClass("text-success fw-bold");
                }

                $('#displayTotal').text(nuevoTotal.toLocaleString('es-ES', formatoMoneda));

                // 5. Actualizar el input hidden para el POST
                $('#inputGastosEnvioHidden').val(precioEnvio.toFixed(2));
            });
        });
    </script>
}