@model BaseConLogin.Models.ContactMessage
@{
    ViewData["Title"] = "Contacto";
}
@inject BaseConLogin.Services.Tiendas.ITiendaConfigService TiendaService
@{
    var tiendaConf = await TiendaService.GetConfigAsync();
}

<div class="container py-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm text-center mb-5" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4 mb-5">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 h-100 p-4 bg-dark text-white">
                <h3 class="fw-bold mb-4">Información de Contacto</h3>

                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-telephone text-white"></i>
                    </div>
                    <div>
                        <p class="mb-0 small text-opacity-75 text-white">Llámanos</p>
                        <p class="mb-0 fw-bold">@tiendaConf.Telefono</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-envelope text-white"></i>
                    </div>
                    <div>
                        <p class="mb-0 small text-opacity-75 text-white">Email</p>
                        <a href="mailto:@tiendaConf.EmailContacto" class="text-white text-decoration-none fw-bold">@tiendaConf.EmailContacto</a>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary rounded-circle p-2 me-3" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-clock text-white"></i>
                    </div>
                    <div>
                        <p class="mb-0 small text-opacity-75 text-white">Horario</p>
                        <p class="mb-0 fw-bold small">@tiendaConf.Horario</p>
                    </div>
                </div>

                <hr class="opacity-25 mb-4">

                <a href="https://wa.me/>@tiendaConf.Whatsapp" target="_blank" class="btn btn-success btn-lg w-100 shadow-sm mt-auto">
                    <i class="bi bi-whatsapp me-2"></i> Enviar WhatsApp
                </a>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0 p-4 h-100">
                <h3 class="fw-bold mb-4 text-dark">Envíanos un mensaje</h3>
                <form asp-action="Index" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Nombre</label>
                            <input asp-for="Name" class="form-control bg-light border-0 p-2" placeholder="Tu nombre..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Teléfono</label>
                            <input asp-for="Phone" class="form-control bg-light border-0 p-2" placeholder="Opcional" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control bg-light border-0 p-2" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Message" class="form-label fw-semibold">Mensaje</label>
                        <textarea asp-for="Message" class="form-control bg-light border-0 p-2" rows="4" placeholder="¿En qué podemos ayudarte?"></textarea>
                        <span asp-validation-for="Message" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input asp-for="AcceptedPrivacyPolicy" class="form-check-input" />
                        <label asp-for="AcceptedPrivacyPolicy" class="form-check-label small text-muted">
                            He leído y acepto la política de privacidad
                        </label>
                        <br />
                        <span asp-validation-for="AcceptedPrivacyPolicy" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm">
                        Enviar Mensaje <i class="bi bi-send ms-2"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-geo-alt-fill text-danger me-2"></i>Nuestra Ubicación</h5>
                </div>
                <div class="card border-0 shadow-sm h-100" style="min-height: 400px; overflow: hidden;">
                    @if (!string.IsNullOrEmpty(@tiendaConf.MapaIncrustado))
                    {
                        if (@tiendaConf.MapaIncrustado.Contains("<iframe"))
                        {
                            @* Si el usuario pegó el código embed completo, lo mostramos tal cual pero ajustado *@
                            <div class="ratio ratio-16x9 h-100">
                                @Html.Raw(@tiendaConf.MapaIncrustado.Replace("width=\"600\"", "width=\"100%\"").Replace("height=\"450\"", "height=\"100%\""))
                            </div>
                        }
                        else
                        {
                            @* Si el usuario solo pegó una URL, intentamos incrustarla *@
                            <iframe width="100%"
                                    height="100%"
                                    style="border:0; min-height: 450px;"
                                    loading="lazy"
                                    allowfullscreen
                                    src="@tiendaConf.MapaIncrustado">
                            </iframe>
                        }
                    }
                    else
                    {
                        <div class="d-flex flex-column align-items-center justify-content-center h-100 text-muted">
                            <i class="bi bi-map mb-3" style="font-size: 3rem;"></i>
                            <p>Mapa no configurado aún.</p>
                        </div>
                    }
                </div>
            </div>




        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}