@model IEnumerable<BaseConLogin.Models.Presupuesto>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-list-check me-2"></i> Presupuestos Recibidos</h2>
        <span class="badge bg-dark">Total: @Model.Count()</span>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Fecha</th>
                        <th>Cliente</th>
                        <th>Email</th>
                        <th>Cantidad</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted">@item.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</td>
                            <td><span class="fw-bold">@item.Nombre @item.Apellidos</span></td>
                            <td>@item.Email</td>
                            <td>@item.Cantidad</td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="DetallePresupuesto" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                        Ver detalle
                                    </a>

                                    <form asp-action="EliminarPresupuesto" asp-route-id="@item.Id" method="post"
                                          onsubmit="return confirm('¿Estás seguro de que deseas eliminar este presupuesto? Esta acción no se puede deshacer.');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                            <td>
                                @switch (item.Estado)
                                {
                                    case "Pendiente":
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                        break;
                                    case "Respondido":
                                        <span class="badge bg-info">Respondido</span>
                                        break;
                                    case "Aceptado":
                                        <span class="badge bg-success">Aceptado</span>
                                        break;
                                    case "Rechazado":
                                        <span class="badge bg-danger">Rechazado</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.Estado</span>
                                        break;
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>