@model BaseConLogin.ViewModel.HomeIndexVM

@{
    ViewData["Title"] = "Inicio";
}

<h1 class="mb-4">Bienvenido a nuestra tienda</h1>

@if (Model.Destacados.Any())
{
    <h2>Destacados</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var p in Model.Destacados)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@p.ImagenPrincipal" class="card-img-top" style="height:250px;object-fit:cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Nombre</h5>
                        <p class="card-text text-truncate">@p.Descripcion</p>
                        <p class="fw-bold">@p.PrecioBase €</p>
                        @if (p.EsNuevo)
                        {
                            <span class="badge bg-success mb-2">Nuevo</span>
                        }
                        @if (p.EsOferta)
                        {
                            <span class="badge bg-warning text-dark mb-2">Oferta</span>
                        }
                        <a asp-controller="ProductoSimple" asp-action="Details" asp-route-id="@p.ProductoBaseId" class="btn btn-primary mt-auto">
                            Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (Model.UltimasUnidades.Any())
{
    <h2>Últimas Unidades</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var p in Model.UltimasUnidades)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-danger">
                    <img src="@p.ImagenPrincipal" class="card-img-top" style="height:250px;object-fit:cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Nombre</h5>
                        <p class="card-text text-truncate">@p.Descripcion</p>
                        <p class="fw-bold">@p.PrecioBase €</p>
                        <span class="badge bg-danger mb-2">¡Últimas unidades!</span>
                        <a asp-controller="ProductoSimple" asp-action="Details" asp-route-id="@p.ProductoBaseId" class="btn btn-primary mt-auto">
                            Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<h2>Todos los productos</h2>
<div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    @foreach (var p in Model.Productos)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@p.ImagenPrincipal" class="card-img-top" style="height:250px;object-fit:cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@p.Nombre</h5>
                    <p class="card-text text-truncate">@p.Descripcion</p>
                    <p class="fw-bold">@p.PrecioBase €</p>
                    @if (p.EsNuevo)
                    {
                        <span class="badge bg-success mb-2">Nuevo</span>
                    }
                    @if (p.EsOferta)
                    {
                        <span class="badge bg-warning text-dark mb-2">Oferta</span>
                    }
                    <a asp-controller="ProductoSimple" asp-action="Details" asp-route-id="@p.ProductoBaseId" class="btn btn-primary mt-auto">
                        Ver Detalles
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
            </li>
        }
    </ul>
</nav>
