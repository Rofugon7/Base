@model BaseConLogin.ViewModel.HomeIndexVM
@{
    ViewData["Title"] = "Explora nuestra Tienda";
    int contadorGlobal = 0;
}

@inject BaseConLogin.Services.Tiendas.ITiendaConfigService TiendaService
@{
    var tiendaConf = await TiendaService.GetConfigAsync();
}

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.12) !important;
        }

    .btn-view {
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
    }

    .badge-overlay {
        position: absolute;
        top: 15px;
        left: 15px;
        z-index: 10;
    }

    .hero-section {       
        color: white;
        padding: 60px 0;
        border-radius: 20px;
        margin-bottom: 50px;
    }
</style>

<div class="container py-4" >
    <div class="hero-section text-center" style="background-color: @tiendaConf.ColorCorporativo;">
        <h1 class="display-4 fw-bold">Descubre @tiendaConf.NombreComercial</h1>
        <p class="lead opacity-75"> Servicio de impresión rápida. Precios muy económicos.</p>
    </div>

    @* --- SECCIÓN DESTACADOS (Layout de cuadrícula elegante) --- *@
    @if (Model.Destacados.Any())
    {
        <div class="d-flex align-items-center mb-4">
            <h2 class="fw-bold mb-0">✨ Destacados</h2>
            <div class="flex-grow-1 ms-3 border-bottom opacity-25"></div>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
            @foreach (var p in Model.Destacados)
            {
                contadorGlobal++;
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="badge-overlay">
                            @if (p.EsNuevo)
                            {
                                <span class="badge bg-success rounded-pill px-3">Nuevo</span>
                            }
                            @if (p.EsOferta)
                            {
                                <span class="badge bg-warning text-dark rounded-pill px-3 ms-1">Oferta</span>
                            }
                        </div>
                        <img src="@p.ImagenPrincipal" class="card-img-top" style="height:280px; object-fit:cover;" alt="@p.Nombre" @(contadorGlobal > 3 ? "loading=lazy" : "") />
                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="fw-bold">@p.Nombre</h5>
                            <p class="text-muted small flex-grow-1">@p.Descripcion</p>
                            <p class="h4 text-primary fw-bold">@p.CalcularPrecioFinal().ToString("C")</p>
                            <a asp-controller="ProductoSimple" asp-action="Details" asp-route-id="@p.ProductoBaseId" class="btn btn-primary btn-view mt-3">
                                <i class="bi bi-eye me-2"></i>Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @* --- ÚLTIMAS UNIDADES (Diseño más compacto o con alerta) --- *@
    @if (Model.UltimasUnidades.Any())
    {
        <div class="bg-light p-4 rounded-4 mb-5 border-start border-danger border-5">
            <h2 class="fw-bold text-danger mb-4"><i class="bi bi-fire me-2"></i>¡Corre, que vuelan!</h2>
            <div class="row row-cols-1 row-cols-md-4 g-3">
                @foreach (var p in Model.UltimasUnidades)
                {
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm product-card">
                            <img src="@p.ImagenPrincipal" class="card-img" style="height:180px; object-fit:cover; opacity:0.9" loading="lazy" />
                            <div class="card-img-overlay d-flex align-items-start justify-content-end">
                                <span class="badge bg-danger">Últimas unidades</span>
                            </div>
                            <div class="card-body text-center p-2">
                                <h6 class="mb-1 fw-bold">@p.Nombre</h6>
                                <p class="mb-2 text-danger fw-bold small">@p.CalcularPrecioFinal().ToString("C") </p>
                                <a asp-controller="ProductoSimple" asp-action="Details" asp-route-id="@p.ProductoBaseId"
                                   class="btn btn-sm btn-outline-danger rounded-pill px-3" style="position: relative; z-index: 5;">
                                    Ver Producto
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @* --- TODOS LOS PRODUCTOS --- *@
    <div class="d-flex align-items-center mb-4 mt-5">
        <h2 class="fw-bold mb-0">Catálogo Completo</h2>
        <div class="flex-grow-1 ms-3 border-bottom opacity-25"></div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4 mb-5">
        @foreach (var p in Model.Productos)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 product-card">
                    <img src="@p.ImagenPrincipal" class="card-img-top" style="height:200px; object-fit:cover;" loading="lazy" />
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">ID: #@p.ProductoBaseId</span>
                            @if (p.EsOferta)
                            {
                                <i class="bi bi-tag-fill text-warning"></i>
                            }
                        </div>
                        <h6 class="fw-bold text-truncate">@p.Nombre</h6>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h5 mb-0 fw-bold">@p.CalcularPrecioFinal().ToString("C") </span>
                            <a asp-controller="ProductoSimple" asp-action="Details" asp-route-id="@p.ProductoBaseId" class="btn btn-sm btn-dark rounded-circle shadow">
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* --- PAGINACIÓN --- *@
    <nav class="mt-5">
        <ul class="pagination justify-content-center border-0">
            @for (int i = 1; i <= Model.TotalPaginas; i++)
            {
                <li class="page-item mx-1 @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link rounded-pill px-4 shadow-sm border-0" asp-action="Index" asp-route-pagina="@i">@i</a>
                </li>
            }
        </ul>
    </nav>

    <div class="container-fluid mt-5" >
        <div class="row text-white py-5 rounded-top-5 shadow-lg overflow-hidden position-relative" style="background-color: @tiendaConf.ColorCorporativo;">
            <div class="position-absolute top-0 start-0 w-100 h-100 opacity-25"
                 style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 32px 32px;">
            </div>

            <div class="container position-relative" >
                <div class="row align-items-center">
                    <div class="col-lg-6 mb-4 mb-lg-0 text-center text-lg-start">
                        <h2 class="display-6 fw-bold mb-3">Suscríbete a nuestra newsletter</h2>
                        <p class="lead opacity-75 mb-4">Obtén acceso semanal a nuestras mejores ofertas, consejos y trucos.</p>
                        <form asp-controller="Home" asp-action="Suscribirse" method="post">
                            <div class="input-group mb-3 mx-auto mx-lg-0" style="max-width: 400px;">
                                <input type="email" name="email" required
                                       class="form-control rounded-pill-start border-0"
                                       placeholder="Tu correo electrónico">
                                <button class="btn btn-primary rounded-pill-end px-4 fw-bold" type="submit">
                                    Suscribirse
                                </button>
                            </div>
                        </form>

                        @if (TempData["NewsletterSuccess"] != null)
                        {
                            <small class="text-success d-block mt-2">@TempData["NewsletterSuccess"]</small>
                        }
                        <p class="small opacity-75 mb-4">Sin spam, nosotros lo odiamos más que tú.</p>
                    </div>

                    <div class="col-lg-6">
                        <div class="row g-4 text-start">
                            <div class="col-md-4 col-6">
                                <h6 class="fw-bold text-uppercase mb-3 small" style="letter-spacing: 1px; color: #fff;">Atención al cliente</h6>
                                <ul class="list-unstyled small">
                                    <li class="mb-2">
                                        @* Cambiamos text-muted por text-white-50 para que se vea sobre fondo oscuro *@
                                        <a asp-controller="Home" asp-action="PreguntasFrecuentes" class="text-white-50 text-decoration-none hover-link">
                                            Preguntas Frecuentes (FAQ)
                                        </a>
                                    </li>
                                    <li class="mb-2">
                                        <a asp-controller="Home" asp-action="Envios" class="text-white-50 text-decoration-none">
                                            Envíos y devoluciones
                                        </a>
                                    </li>
                                    <li class="mb-2">
                                        <a asp-controller="Pedidos" asp-action="Index" class="text-white-50 text-decoration-none hover-link">
                                            Estado de tu Pedido
                                        </a>
                                    </li>
                                    <li class="mb-2">
                                        <a asp-controller="Home" asp-action="Plantillas" class="text-white-50 text-decoration-none hover-link">
                                            Plantillas para impresión
                                        </a>
                                    </li>
                                    <li class="mb-2">
                                        <a asp-controller="Home" asp-action="Presupuesto" class="text-white-50 text-decoration-none hover-link">
                                            Solicitar presupuesto
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <style>
                                /* Efecto para que el usuario sepa que es un enlace al poner el ratón encima */
                                .hover-link:hover {
                                    color: #ffffff !important;
                                    text-decoration: underline !important;
                                }
                            </style>

                            <div class="col-md-3 col-6">
                                <h6 class="fw-bold text-uppercase mb-3 small" style="letter-spacing: 1px;">La empresa</h6>
                                <ul class="list-unstyled opacity-75 small">
                                    <li class="nav-item">
                                        <a class="text-white-50 text-decoration-none" asp-controller="Home" asp-action="QuienesSomos">Conócenos</a>
                                    </li>
                                    <li class="nav-item"><a class="text-white-50 text-decoration-none" asp-controller="Contact" asp-action="Index">Contacto</a></li>
                                </ul>
                            </div>

                            <div class="col-md-5 col-12">
                                <h6 class="fw-bold text-uppercase mb-3 small" style="letter-spacing: 1px;">Contacto</h6>
                                <ul class="list-unstyled opacity-75 small mb-4">
                                    <li class="mb-2">
                                        <a href="tel:+34913758045" class="text-decoration-none text-reset hover-link-contact">
                                            <i class="bi bi-telephone me-2 text-primary"></i>@tiendaConf.Telefono
                                        </a>
                                    </li>

                                    <li class="mb-2">
                                        <a href="mailto:@tiendaConf.EmailContacto" class="text-decoration-none text-reset hover-link-contact">
                                            <i class="bi bi-envelope me-2 text-primary"></i>@tiendaConf.EmailContacto
                                        </a>
                                    </li>

                                    <li class="mb-2">
                                        <a href="@tiendaConf.Maps"
                                           target="_blank"
                                           class="text-decoration-none text-reset hover-link-contact">
                                            <i class="bi bi-geo-alt me-2 text-primary"></i>@tiendaConf.Direccion
                                        </a>
                                    </li>
                                </ul>

                                <h6 class="fw-bold text-uppercase mb-3 small" style="letter-spacing: 1px;">Síguenos</h6>
                                <div class="d-flex gap-2">
                                    <div class="social-icons-container">
                                        @if (!string.IsNullOrEmpty(@tiendaConf.UrlInstagram))
                                        {
                                            <a href="@tiendaConf.UrlInstagram" target="_blank" class="social-icon">
                                                <i class="bi bi-instagram"></i>
                                            </a>
                                        }

                                        @if (!string.IsNullOrEmpty(tiendaConf.UrlFacebook))
                                        {
                                            <a href="@tiendaConf.UrlFacebook" target="_blank" class="social-icon">
                                                <i class="bi bi-facebook"></i>
                                            </a>
                                        }

                                        @if (!string.IsNullOrEmpty(tiendaConf.UrlX))
                                        {
                                            <a href="@tiendaConf.UrlX" target="_blank" class="social-icon">
                                                <i class="bi bi-twitter-x"></i>
                                            </a>
                                        }

                                        @if (!string.IsNullOrEmpty(tiendaConf.UrlTikTok))
                                        {
                                            <a href="@tiendaConf.UrlTikTok" target="_blank" class="social-icon">
                                                <i class="bi bi-tiktok"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Efecto sutil al pasar el ratón */
    .hover-link-contact:hover {
        color: #0d6efd !important; /* Color primario de Bootstrap */
        transition: 0.2s;
    }
</style>